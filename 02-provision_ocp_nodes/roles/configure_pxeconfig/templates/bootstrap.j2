 append ip=dhcp rd.neednet=1 coreos.inst.install_dev=vda console=tty0 console=ttyS0 coreos.inst=yes coreos.inst.image_url=http://{{ bastion_vm_ipaddress }}:8080/openshift4/images/{{ rhcos_biosimg }} coreos.inst.ignition_url=http://{{ bastion_vm_ipaddress }}:8080/openshift4/{{ openshift_z_version }}/ignitions/bootstrap.ign initrd=/openshift4/{{openshift_z_version}}/{{ rhcos_initramfs }}
